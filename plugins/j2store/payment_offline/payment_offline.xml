<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" method="upgrade" group="j2store">
	<name>plg_j2store_payment_offline</name>
	<version>2.6.4</version>
	<creationDate>October 2013</creationDate>
	<author>Weblogicx India</author>
	<authorEmail>support@j2store.org</authorEmail>
	<authorUrl>http://j2store.org</authorUrl>
	<copyright>2013 Weblogicx India Private Limited</copyright>
	<license>GNU General Public License v2</license>
	<description>J2STORE_PLUGINDESC</description>
	
	<files>
		<filename plugin="payment_offline">payment_offline.php</filename>
		<filename>index.html</filename>
		<folder>payment_offline</folder>	
	</files>	
	
<config>
	<fields name="params">
  	  <fieldset name="basic">
  	  <field name="display_name" type="text" size="30" default="" label="j2store_plugin_display_name" description="j2store_plugin_display_name_desc"/>
       <field name="enable_cod" type="radio" default="1" label="j2store_offline_accept_cod" description="j2store_offline_accept_cod_desc">
		  <option value="0">J2STORE_NO</option>
		  <option value="1">J2STORE_YES</option>
		</field>
		<field name="enable_check" type="radio" default="1" label="j2store_offline_accept_checks" description="j2store_offline_accept_checks_desc">
		  <option value="0">J2STORE_NO</option>
		  <option value="1">J2STORE_YES</option>
		</field>
		<field name="enable_moneyorder" type="radio" default="1" label="j2store_offline_accept_money_orders" description="j2store_offline_accept_money_orders_desc">
		  <option value="0">J2STORE_NO</option>
		  <option value="1">J2STORE_YES</option>
		</field>
		<field name="enable_wire" type="radio" default="1" label="j2store_offline_accept_wire" description="j2store_offline_accept_wire_desc">
		  <option value="0">J2STORE_NO</option>
		  <option value="1">J2STORE_YES</option>
		</field>
		<field name="enable_other" type="radio" default="1" label="j2store_offline_accept_other" description="j2store_offline_accept_other">
		  <option value="0">J2STORE_NO</option>
		  <option value="1">J2STORE_YES</option>
		</field>
		
		<field name="payment_status" type="list" default="4" label="j2store_offline_payment_status" description="j2store_offline_payment_status">
          <option value="4">J2STORE_PENDING</option>
          <option value="1">J2STORE_CONFIRMED</option>
          <option value="3">J2STORE_FAILED</option>          
        </field>
        
        <field type="spacer" />
        
        <field name="geozone_id" type="geozonelist" default=""
                label="J2STORE_GEOZONE_RESTRICTION" description="J2STORE_GEOZONE_RESTRICTION_DESC" 
                addfieldpath="/administrator/components/com_j2store/models/fields" 
			/>
        
        <field name="onselection" type="textarea" cols="10" rows="5" default="J2STORE_OFFLINE_PAYMENT_MESSAGE" label="j2store_on_selection_label" description="j2store_on_selection_desc"/>
        <field name="onbeforepayment" type="textarea" cols="10" rows="5" default="J2STORE_OFFLINE_PAYMENT_PREPARATION_MESSAGE" label="j2store_on_before_payment_label" description="j2store_on_before_payment_desc"/>
        <field name="onafterpayment" type="textarea" cols="10" rows="5" default="J2STORE_OFFLINE_PAYMENT_SUBMITTED_MESSAGE" label="j2store_on_after_payment_label" description="j2store_on_after_payment_desc"/>
        
       <field type="spacer" />        
       <field name="button_text" type="text" size="50" default="J2STORE_PLACE_ORDER" label="j2store_button_text_label" description="j2store_button_text_desc" />
       
        <field type="spacer" />
		<field name="articleid" type="text" size="10" default="" label="j2store_offline_article_id" description="j2store_offline_article_id_desc"/>
	</fieldset>
  </fields>	
</config>			
</extension>